<%= form_for @card do |f| %>
  <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--8dp">
    <div class="mdl-card__title meta">
      <div class="group">
        <%= f.text_field :review_date, required: true, value: @card.review_date.strftime("%d-%m-%Y") %>
        <span class="bar"></span>
        <%= f.label :review_date, "Дата пересмотра карточки" %>
      </div>
    </div>

    <div class="mdl-card__title">
      <h3 class="quote">
        <div class="group">
          <%= f.text_field :original_text, required: true %>
          <span class="bar"></span>
          <%= f.label :original_text, "Слово" %>
        </div>

        <div class="group">
          <%= f.text_field :translated_text, required: true %>
          <span class="bar"></span>
          <%= f.label :translated_text, "Перевод" %>
        </div>
      </h3>
    </div>

    <div class="mdl-card__title meta">
      <div class="group">
        <%= f.text_field :transcription, required: true %>
        <span class="bar"></span>
        <%= f.label :transcription, "Транскрипция" %>
      </div>
    </div>

    <div class="mdl-card__supporting-text meta meta--fill">
      <div>
        <%= f.button class: "mdl-button mdl-js-button" do 
          content_tag(:submit, "Обновить")
        end %>
    </div>
    </div>
  </div>
<% end %>
