<%= form_for @card do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@card.errors.count, "ошибка") %>:
      </h2>
      <ul>
        <% @card.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mdl-card mdl-cell mdl-cell--12-col mdl-shadow--8dp">
    <div class="mdl-card__title meta">
      <div class="group">
        <%= f.text_field :review_date, required: true, 
          value: (@card.new_record? ? Date.today + 3.days : @card.review_date).strftime("%d-%m-%Y")
        %>
        <span class="bar"></span>
        <%= f.label :review_date, "Дата пересмотра карточки" %>
      </div>
    </div>

    <div class="mdl-card__title">
      <h3 class="quote">
        <div class="group">
          <%= f.text_field :original_text, required: true %>
          <span class="bar"></span>
          <%= f.label :original_text, "Слово" %>
        </div>

        <div class="group">
          <%= f.text_field :translated_text, required: true %>
          <span class="bar"></span>
          <%= f.label :translated_text, "Перевод" %>
        </div>
      </h3>
    </div>

    <div class="mdl-card__title meta">
      <div class="group">
        <%= f.text_field :transcription, required: true %>
        <span class="bar"></span>
        <%= f.label :transcription, "Транскрипция" %>
      </div>
    </div>

    <div class="mdl-card__supporting-text meta meta--fill">
      <div>
        <%= f.button class: "mdl-button mdl-js-button" do 
          content_tag(:submit, "Добавить")
        end %>
    </div>
    </div>
  </div>
<% end %>
