<% content_for :title, "Настройки" %>
<div class="center mdl-card mdl-cell mdl-cell--5-col mdl-shadow--8dp" >
  <% flash.each do |name, msg| %>
    <%= content_tag :div,
      msg.html_safe,
      class: "#{name} mdl-card__supporting-text meta meta--fill"
    %>
  <% end %>

  <%= form_for @user, url: settings_password_update_path  do |f| %>
    <% if @user.errors.any? %>
      <% for message in @user.errors.full_messages %>
        <%= content_tag :div,
          message,
          class: "error mdl-card__supporting-text meta meta--fill"
        %>
      <% end %>
    <% end %>

    <div class="top">
      <div class="original_text login">
        <div class="group">
          <%= f.password_field :new_password, required: true %>
          <span class="bar"></span>
          <%= f.label :password, "Новый пароль" %>
        </div>
        <div class="group">
          <%= f.password_field :new_password_confirmation, required: true %>
          <span class="bar"></span>
          <%= f.label :password_confirmation, "Повторите новый пароль" %>
        </div>
        <div class="group">
          <%= f.password_field :password, required: true %>
          <span class="bar"></span>
          <%= f.label :password, "Текущий пароль" %>
        </div>
      </div>
    </div>
    <div class="mdl-card__supporting-text meta meta--fill">
      <div>
        <button class="mdl-button mdl-js-button">
          Изменить
        </button>
      </div>
    </div>
  <% end %>
<end>
